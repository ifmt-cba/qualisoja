# Arquivo de exemplo para variáveis de ambiente
# Copie para .env e preencha com os valores reais

# Django Core
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=qualisoja.settings

# Database
DATABASE_URL=sqlite:///db.sqlite3
# Para PostgreSQL: postgresql://user:password@localhost:5432/dbname

# Cache
REDIS_URL=redis://localhost:6379/0

# Allowed Hosts (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Media and Static Files
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# Security (Production)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# Monitoring
SENTRY_DSN=

# AWS S3 (se usar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Logging
LOG_LEVEL=DEBUG
