# Ambiente de Produção
DEBUG=False
SECRET_KEY=
DJANGO_SETTINGS_MODULE=qualisoja.settings.production

# Database (PostgreSQL recomendado)
DATABASE_URL=postgresql://user:password@db:5432/qualisoja

# Cache
REDIS_URL=redis://redis:6379/0

# Hosts permitidos
ALLOWED_HOSTS=qualisoja.com,www.qualisoja.com,api.qualisoja.com

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Media and Static
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Monitoring
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
